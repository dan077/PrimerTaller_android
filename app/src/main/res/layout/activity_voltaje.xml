<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#606060"
    android:padding="20sp"
    android:paddingStart="20sp"
    android:paddingLeft="20sp"
    android:paddingTop="20sp"
    android:paddingEnd="20sp"
    android:paddingRight="20sp"
    android:paddingBottom="20sp"
    tools:context=".VoltajeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_radius"
        android:orientation="vertical"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp">


        <androidx.cardview.widget.CardView
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            app:cardCornerRadius="300sp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/avatar"
                tools:srcCompat="@drawable/bobina_de_tesla" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.85"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hallemos el voltaje:"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione la cantidad de resistencias"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <Spinner
                android:id="@+id/spresistencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/spinner"

                />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valor de la resistencia 1"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/edtresist1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|numberDecimal"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valor de la resistencia 2"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/edtresist2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|numberDecimal"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valor de la resistencia 3"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/edtresist3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|numberDecimal"
                android:textColor="#FFFFFF" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingrese el valor de la corriente"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/edtcorriente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|numberDecimal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chb_paralelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resistencias en paralelo"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnhallarvoltaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/HALLAR_VOLTAJE"
                android:textSize="18sp"
                app:backgroundTint="#388E3C"
                app:cornerRadius="20sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>